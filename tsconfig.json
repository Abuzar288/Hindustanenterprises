{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    // Compilation options
    "noEmit": true, // Vite handles emitting files; tsc is for type checking.
    "outDir": "./dist", // Still useful for IDEs to understand structure, though Vite controls final dist.
    "rootDir": "./", 
    "sourceMap": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"]
  },
  "include": ["**/*.ts", "**/*.tsx", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}